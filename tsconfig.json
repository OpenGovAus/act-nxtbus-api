  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
